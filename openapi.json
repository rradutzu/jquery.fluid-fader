  "components": {
    "schemas": {
      "ProductAPI": {
        "allOf": [
          {
            "type": "object",
            "properties": {
              "id": {
                "type": "integer",
                "format": "int32"
              },
              "type": {
                "type": "string",
                "enum": [
                  "ITEM",
                  "KIT"
                ]
              },
              "sku": {
                "type": "string"
              },
              "creationTimestamp": {
                "type": "string",
                "format": "date-time"
              }
            }
          },
          {
            "$ref": "#/components/schemas/ProductUpdateAPI"
          }
        ]
      },
      "ProductUpdateAPI": {
        "type": "object",
        "properties": {
          "shortDescription": {
            "type": "string"
          },
          "longDescription": {
            "type": "string"
          },
          "weightGms": {
            "type": "integer",
            "format": "int32"
          },
          "lengthCms": {
            "type": "integer",
            "format": "int32"
          },
          "widthCms": {
            "type": "integer",
            "format": "int32"
          },
          "heightCms": {
            "type": "integer",
            "format": "int32"
          },
          "perishable": {
            "type": "boolean"
          },
          "countryOfOrigin": {
            "type": "string"
          },
          "harmonisationCode": {
            "type": "string"
          },
          "costPriceGBP": {
            "type": "number",
            "format": "double"
          },
          "modifiedTimestamp": {
            "type": "string",
            "format": "date-time"
          },
          "barcodes": {
            "uniqueItems": true,
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "kitBreakdown": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/ProductKitValueMetadataAPI"
            }
          }
        }
      },
      "ProductKitValueMetadataAPI": {
        "type": "object",
        "properties": {
          "productId": {
            "type": "integer",
            "format": "int32"
          },
          "quantity": {
            "type": "integer",
            "format": "int32"
          }
        }
      },
      "ProductSearchDTO": {
        "type": "object",
        "properties": {
          "skus": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "barcodes": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "modifiedSince": {
            "type": "string",
            "format": "date-time"
          }
        }
      },
      "OrderAPI": {
        "allOf": [
          {
            "type": "object",
            "properties": {
              "id": {
                "type": "integer",
                "format": "int32"
              },
              "orderNumber": {
                "type": "string"
              },
              "clientUniqueOrderIdentifier": {
                "type": "string"
              },
              "orderDate": {
                "type": "string",
                "format": "date"
              },
              "numberOfLines": {
                "type": "integer",
                "format": "int32"
              },
              "numberOfItems": {
                "type": "integer",
                "format": "int32"
              },
              "currency": {
                "type": "string"
              },
              "express": {
                "type": "boolean"
              },
              "preferredCarrier": {
                "type": "string"
              },
              "preferredCarrierService": {
                "type": "string"
              },
              "createdTimestamp": {
                "type": "string",
                "format": "date-time"
              },
              "anonimised": {
                "type": "boolean"
              },
              "orderLines": {
                "type": "array",
                "items": {
                  "$ref": "#/components/schemas/OrderLineAPI"
                }
              }
            }
          },
          {
            "$ref": "#/components/schemas/OrderUpdateAPI"
          }
        ]
      },
      "OrderUpdateAPI": {
        "type": "object",
        "properties": {
          "customerDetails": {
            "type": "object",
            "properties": {
              "emailAddress": {
                "type": "string"
              },
              "telephone": {
                "type": "string"
              },
              "deliveryAddress": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "companyName": {
                    "type": "string"
                  },
                  "addressLine1": {
                    "type": "string"
                  },
                  "addressLine2": {
                    "type": "string"
                  },
                  "city": {
                    "type": "string"
                  },
                  "region": {
                    "type": "string"
                  },
                  "postcode": {
                    "type": "string"
                  },
                  "countryCode": {
                    "type": "string"
                  }
                }
              }
            }
          },
          "deliveryInstructions": {
            "type": "string"
          },
          "giftMessage": {
            "type": "string"
          },
          "modifiedTimestamp": {
            "type": "string",
            "format": "date-time"
          }
        }
      },
      "OrderLineAPI": {
        "type": "object",
        "properties": {
          "uniqueOrderLineIdentifier": {
            "type": "string"
          },
          "productId": {
            "type": "integer",
            "format": "int32"
          },
          "quantity": {
            "type": "integer",
            "format": "int32"
          },
          "statuses": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "status": {
                  "type": "string",
                  "enum": [
                    "NEW",
                    "IN PROGRESS",
                    "DESPATCHED",
                    "CANCELLED"
                  ]
                },
                "modifiedAt": {
                  "type": "string",
                  "format": "date-time"
                },
                "quantity": {
                  "type": "integer",
                  "format": "int32"
                },
                "additionalDetails": {
                  "type": "object",
                  "properties": {
                    "carrier": {
                      "type": "string"
                    },
                    "carrierService": {
                      "type": "string"
                    },
                    "trackingNumber": {
                      "type": "string"
                    },
                    "cancellationReason": {
                      "type": "string"
                    },
                    "cancellationReference": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      },
      "OrderLineStatusUpdateAPI": {
        "type": "object",
        "properties": {
          "uniqueOrderLineIdentifier": {
            "type": "string"
          },
          "productId": {
            "type": "integer",
            "format": "int32"
          },
          "quantity": {
            "type": "integer",
            "format": "int32"
          },
          "newStatus": {
            "type": "string",
            "enum": [
              "CANCELLED"
            ]
          }
        }
      },
      "OrderSearchDTO": {
        "type": "object",
        "properties": {
          "orderNumbers": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "clientUniqueOrderIdentifiers": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "despatchedDateFrom": {
            "type": "string",
            "format": "date-time"
          },
          "despatchedDateTo": {
            "type": "string",
            "format": "date-time"
          },
          "cancelledDateFrom": {
            "type": "string",
            "format": "date-time"
          },
          "cancelledDateTo": {
            "type": "string",
            "format": "date-time"
          }
        }
      },
      "StockSearchDTO": {
        "type": "object",
        "properties": {
          "skus": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "productIds": {
            "type": "array",
            "items": {
              "type": "integer",
              "format": "int32"
            }
          }
        }
      },
      "StockAPI": {
        "type": "object",
        "properties": {
          "productId": {
            "type": "integer",
            "format": "int32"
          },
          "sku": {
            "type": "string"
          },
          "physicalSaleableQuantity": {
            "type": "integer",
            "format": "int32"
          },
          "physicalNonSaleableQuantity": {
            "type": "integer",
            "format": "int32"
          }
        }
      },
      "StockTransactionsSearchDTO": {
        "type": "object",
        "properties": {
          "skus": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "productIds": {
            "type": "array",
            "items": {
              "type": "integer",
              "format": "int32"
            }
          },
          "dateCreatedFrom": {
            "type": "string",
            "format": "date-time"
          },
          "dateCreatedTo": {
            "type": "string",
            "format": "date-time"
          }
        }
      },
      "StockTransactionAPI": {
        "type": "object",
        "properties": {
          "productId": {
            "type": "integer",
            "format": "int32"
          },
          "sku": {
            "type": "string"
          },
          "type": {
            "type": "string",
            "enum": [
              "WRITE-ON",
              "WRITE-OFF",
              "INTERNAL"
            ]
          },
          "fromCategory": {
            "type": "string",
            "enum": [
              "-",
              "SALEABLE",
              "NON-SALEABLE"
            ]
          },
          "toCategory": {
            "type": "string",
            "enum": [
              "-",
              "SALEABLE",
              "NON-SALEABLE"
            ]
          },
          "quantityAdjusted": {
            "type": "integer",
            "format": "int32"
          }
        }
      }
    },
    "responses": {
      "UnauthorizedError": {
        "description": "JWT Bearer Token is missing or invalid"
      }
    },
    "securitySchemes": {
      "BearerAuth": {
        "type": "http",
        "description": "JWT Bearer Token Auth",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      },
      "OAuthCAS": {
        "type": "oauth2",
        "description": "This application requires OAuth 2.0 authentication to CAS",
        "flows": {
          "implicit": {
            "authorizationUrl": "/oauth",
            "scopes": {
              "name": "o4b"
            }
          }
        }
      }
    }
  }
